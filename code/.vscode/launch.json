{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "node",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "cwd": "${workspaceFolder}",
      "args": [
        "--config",
        "./webpack.config.js",
        "--mode",
        "development",
        "--port",
        "3000"
      ],
      "env": {
        "environment": "development",
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}